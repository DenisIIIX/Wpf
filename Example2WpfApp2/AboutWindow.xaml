<Window x:Class="Example2WpfApp2.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Example2WpfApp2"
        mc:Ignorable="d"
        Title="О программе" Height="400" Width="250">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition/>
            <RowDefinition Height="100"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <TextBlock TextWrapping="Wrap" Text="Простой текстовый рекдактор" FontSize="14" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <Image Grid.Row="1" Source="Img\image0.jpeg"/>
        <TextBlock Grid.Row="2" 
                   TextWrapping="Wrap"  
                   HorizontalAlignment="Center" 
                   VerticalAlignment="Center">
            <Run Text="Автор: Волков Д.В."/>
            <LineBreak/>
            <Run Text="Версия: 1.0"/> 
            <LineBreak/>
            <Run Text="Дата создания: 25.08.2025"/>          
         </TextBlock>
        <Button Grid.Row="3" Content="Закрыть" Height="20" Width="60" Click="Close" />
    </Grid>
</Window>
